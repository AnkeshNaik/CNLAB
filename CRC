#include <iostream>
#include <string>
using namespace std;
int fun(string msg, string crc)
{
    int m = msg.length();
    int n = crc.length();
    string encoded = " ";
    encoded += msg;
    for (int i = 1; i <= n - 1; i++)
        encoded += '0';

    for (int i = 0; i <= encoded.length() - n;)
    {
        for (int j = 0; j < n; j++)
            encoded[i + j] = encoded[i + j] == crc[j] ? '0' : '1';
        for (; i < encoded.length() && encoded[i] != '1'; i++)
            ;
    }
    for (char i : encoded.substr(encoded.length() - crc.length()))
        if (i != '0')
        {
            cout << "error";
            return 0;
        }
    cout << "NO error";

    return 0;
}
int main()
{
    string msg, crc;
    string encoded = " ";
    cout << "enter the message   ";
    cin >> msg;
    cout << "enter generator polynomail   ";
    cin >> crc;
    int m = msg.length();
    int n = crc.length();
    encoded += msg;
    for (int i = 1; i <= n - 1; i++)
        encoded += '0';

    for (int i = 0; i <= encoded.length() - n;)
    {
        for (int j = 0; j < n; j++)
            encoded[i + j] = encoded[i + j] == crc[j] ? '0' : '1';
        for (; i < encoded.length() && encoded[i] != '1'; i++)
            ;
    }
    string q = msg + encoded.substr(encoded.length() - n + 1);
    cout <<"encoded message  :"<< q<<endl;

    fun(q, crc);
    return 0;
}
